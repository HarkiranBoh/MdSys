@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var equipment in Model.equipment)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@equipment.ImageUrl" alt="image">
            <div class="caption">
                <h3 class="pull-right">@equipment.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Equipment" asp-action="Details" asp-route-id="@equipment.Id"> @equipment.Name</a>
                </h3>
                <p>@equipment.ShortDescription</p>
            </div>
        </div>
    </div>

}

